<% include ../partials/header %>
    
    <div class="container">
        <div class="row">
            <div class="formStyle">
                <h1 class="formTitle">Add a New Product</h1>
                <form action="/products" method="POST">
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="text" name="title" placeholder="Title">
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="text" name="imageUrl" placeholder="Image">
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="number" min="100" max="50000" step="100" name="price" placeholder="Price">
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="text" name="description" placeholder="Description">
                    </div>
                    <div class="form-group">
                        <input class="btn btn-lg btn-block" style="background: #EE4266; color: white; font-size: 20px;" type="submit">
                    </div>
                </form>
            </div>
        </div>
    </div>

<% include ../partials/footer %>