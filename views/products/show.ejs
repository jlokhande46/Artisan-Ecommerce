<% include ../partials/header %>

<div class="bg-light py-3">
      <div class="container">
        <div class="row">
          <div class="col-md-12 mb-0"><a href="index.html">Home</a> <span class="mx-2 mb-0">/</span> <a href="shop.html">Shop</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Gray Shoe</strong></div>
        </div>
      </div>
    </div>  

    <div class="site-section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="item-entry" style="position: relative; bottom: 20%;">
              <a href="#" class="product-item md-height d-block">
                <img src="<%= product.imageUrl %>" alt="Image" class="img-fluid">
              </a>
              
            </div>

          </div>
          <div class="col-md-6">
            <h2 class="text-black"><%= product.title %></h2>
            <p><%= product.description %></p>
            <p><strong class="text-primary h4"><%= product.price %></strong></p>
            <div class="mb-5">
              <div class="input-group mb-3" style="max-width: 120px;">
              <div class="input-group-prepend">
                <button class="btn btn-outline-primary js-btn-minus" type="button">&minus;</button>
              </div>
              <input type="text" class="form-control text-center" value="1" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1">
              <div class="input-group-append">
                <button class="btn btn-outline-primary js-btn-plus" type="button">&plus;</button>
              </div>
            </div>

            </div>
            <p><a href="/cart" class="buy-now btn btn-sm height-auto px-4 py-3 btn-primary">Add To Cart</a></p>
          </div>
        </div>
      </div>
    </div>
  <div class="card text-black bg-light mb-3" style="top: 5%;">
                <div class="card-header">
                    <h4>
                        Reviews
                        <a class="btn btn-success float-right" href="/products/<%= product._id %>/reviews/new">Add a New Review</a>
                    </h4>
                </div>
                <div class="card-body">
                    <% product.reviews.forEach(function(review) { %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%= review.author.username %></strong>
                                <span class="float-right"><%= review.created.toDateString() %></span>
                                <p>
                                    <div>
                                        <%= review.text %>
                                        <% if(currentUser && review.author.id.equals(currentUser._id)) { %>
                                            <div class="float-right">
                                                <a class="btn btn-sm btn-warning" href="/products/<%= product._id %>/reviews/<%= review._id %>/edit">Edit</a>
                                                <form action="/products/<%= product._id %>/reviews/<%= review._id %>?_method=DELETE" class="inline-block" method="POST">
                                                    <button class="btn btn-sm btn-danger">Delete</button>
                                                </form>
                                            </div>
                                        <% } %>
                                    </div>
                                </p>
                            </div>
                        </div>
                    <% }); %>
                </div>
    
<% include ../partials/footer %>